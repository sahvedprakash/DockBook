            <input type="time" name="monend" />

            <input
              type="checkbox"
              name="monoffDay"
              value="off-day"
              id="off-day"
            />
            <label for="off-day">Off Day</label>
          </div>
          <div class="timingAdd">
            <label for="">Tuesday</label>
            <input type="time" name="tuestr" />

            <span class="to-span">TO</span>
            <input type="time" name="tueend" />

            <input
              type="checkbox"
              name="tueoffDay"
              value="off-day"
              id="off-day"
            />
            <label for="off-day">Off Day</label>
          </div>
          <div class="timingAdd">
            <label for="">Wednesday</label>
            <input type="time" name="wedstr" />

            <span class="to-span">TO</span>
            <input type="time" name="wedend" />

            <input
              type="checkbox"
              name="wedoffDay"
              value="off-day"
              id="off-day"
            />
            <label for="off-day">Off Day</label>
          </div>
          <div class="timingAdd">
            <label for="">Thursday</label>
            <input type="time" name="thustr" />

            <span class="to-span">TO</span>
            <input type="time" name="thuend" />

            <input
              type="checkbox"
              name="thuoffDay"
              value="off-day"
              id="off-day"
            />
            <label for="off-day">Off Day</label>
          </div>
          <div class="timingAdd">
            <label for="">Friday</label>
            <input type="time" name="fristr" />

            <span class="to-span">TO</span>
