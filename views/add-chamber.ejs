<main class="container">
  <form action="/doctor/add-chamber" class="doc-profile-form" method="post">
    <div class="sec-div information">
      <h2 class="p-title">Chamber Information</h2>
      <div class="form-grp">
        <label for="chamber-name">Chamber Name </label>
        <input
          type="text"
          name="chamberName"
          id="chamber-name"
          placeholder="Enter your name"
          required
        />
      </div>
      <div class="form-grp">
        <label for="chamber-Phonr">Conact No :</label>
        <input
          type="text"
          onkeypress="validate(event)"
          name="chamberPhone"
          id="chamber-phone"
          placeholder="Enter phone number"
          required
        />
      </div>
      <div class="form-grp">
        <label for="chamber-address">Chamber Address</label>
