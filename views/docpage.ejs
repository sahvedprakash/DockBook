<style>
    h1,p{
        font-family: 'Courier New', Courier, monospace;
        text-align: center;
        text-decoration: none;
    }

    .link{
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all .3s;
    }
    a{
        color: white;
        width: 140px;
        height: 30px;
        margin: 5px auto;
        border-radius: 10px;
        padding: 10px;
        background-color: black;
        text-decoration: none;
        text-transform: uppercase;
        text-align: center;
        align-items: center;
        font-size: 13px;
        font-family:'Arial Narrow', Arial, sans-serif;
        letter-spacing: 2px;
    }
    a:hover{
        background-color: rgba(46, 46, 46, 0.603);
    }
    .profile{
    padding: 10px;
    background-color: #7db7fa;
    width: 25%;
    margin: 10px auto;
    border-radius: 25px;
    box-shadow: inset 0px 10px 15px rgba(0, 0, 0, 0.25);
    display: flex;
    flex-direction: column;
    }
    table, th, td {
  border: 1px solid black;
}
table{
    margin: 5px auto;
}
</style>

<div class="profile">
<h1>Hello <%=  DocName%></h1> 
<p><%= oneDoc.email%></p>
<p><%=oneDoc.details%></p>
<p><%= oneDoc.specilized%></p>
</div>

<div class="link">
    <a target="_blank" href="/<%= oneDoc.slug%>/book-appointment"> Book Appoinment</a>
    <a target="_blank" href="/<%= oneDoc.slug%>/add-chamber"> Add Chamber</a>
</div>
<div class="table">
    <% let app = oneDoc.myAppoinments;
       let cham = oneDoc.chambers
    %>

    <% if(app.length>0) { %>
    <table>
        <thead>
            <tr>
                <th>Serial No</th>
                <th>Patients Name</th>
                <th>Health Issue</th>
                <th>Date</th>
            </tr>
        </thead>
        <% const weekday = ["Sun","Mon","Tue","Wed","Thu","Fri","Sat"]
            
        %>
        <tbody>
            <%app.forEach((pa,sl)=>{%>  
                
                <% let day =weekday[pa.date.getDay()];%>
            <tr>
                <td><%= sl+1%></td>
                <td><%= pa.patientsData.name%></td>
                <td><%= pa.patientsData.healthIssu%></td>
                <td><%= day%>-<%= pa.date.getDate()%>/<%= pa.date.getMonth()+1%>/<%= pa.date.getFullYear()%></td>
            </tr>
            <%})%>
            
        </tbody>
    </table>
    <%} else { %>
        <h4>No Paitient is there</h4>
    <% }%>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>Serial No</th>
                <th>Chamber Name</th>
                <th>Address</th>
                <th>Go To</th>
            </tr>
        </thead>
        <tbody>
            <%cham.forEach((chamList,sl)=>{%>  
            <tr>
                <td><%= sl+1%></td>
                <td><%= chamList.chamberName%></td>
                <td><%= chamList.address%></td>
                <td><a href="">visit Chamber</a></td>
            </tr>
            <%})%>
        </tbody>
    </table>
    <input type="checkbox" name="check" value="This is a test" id="">
</div>